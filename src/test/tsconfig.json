{
    "compilerOptions": {
        "declaration": true,
        "target": "ES6",
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "pretty": true,
        "allowJs": false,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "../../node_modules/@types"
        ]
    }
}
